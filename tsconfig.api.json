{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "classes-common/*": [ "shared/classes/*" ],
      "db/*": [ "shared/db/*" ],
      "utils/*": [ "api/shared/utils/*" ]
    }
  },
  "exclude": [
    "node_modules",
    "web"
  ]
}
